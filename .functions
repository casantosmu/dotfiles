ssh_color() {
    gnome-terminal -- sh -c "xtermcontrol --bg '#600' && ssh \"$1\";"
    exit
}

detach() {
  "$@" 1>/dev/null 2>/dev/null &
  disown
}

start_work() {
    detach google-chrome
    detach slack
    detach spotify
    detach thunderbird
    detach code

    gnome-terminal -- sh -c "cd \"$WORK_FOLDER\" || exit 1; docker compose up -d; ./start-services.sh;"
    
    exit
}
